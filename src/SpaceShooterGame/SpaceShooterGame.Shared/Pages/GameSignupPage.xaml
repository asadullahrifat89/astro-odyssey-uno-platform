<Page
    x:Class="SpaceShooterGame.GameSignupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SpaceShooterGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource GameBackgroundColor}"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Images/game_intro.gif" Stretch="UniformToFill" />
        </Grid.Background>

        <Border Style="{StaticResource GameUIContainer}">

            <StackPanel
                x:Name="ActionStack"
                Width="315"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">

                <!--  Game name  -->
                <TextBlock
                    x:Name="ApplicationName_Header"
                    Margin="0,10,0,15"
                    FontSize="30"
                    FontWeight="Bold"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

                <!--  Fullname  -->
                <TextBox
                    x:Name="GameSignupPage_UserFullNameBox"
                    Margin="5"
                    Header="Enter your full name"
                    TextChanged="UserFullNameBox_TextChanged" />

                <!--  Email  -->
                <TextBox
                    x:Name="GameSignupPage_UserEmailBox"
                    Margin="5"
                    Header="Enter email"
                    TextChanged="UserEmailBox_TextChanged" />

                <!--  Username  -->
                <TextBox
                    x:Name="GameSignupPage_UserNameBox"
                    Margin="5"
                    Header="Set a username"
                    TextChanged="UserNameBox_TextChanged" />

                <!--  Password  -->
                <PasswordBox
                    x:Name="GameSignupPage_PasswordBox"
                    Margin="5"
                    Header="Set a password"
                    KeyDown="PasswordBox_KeyDown"
                    TextChanged="PasswordBox_TextChanged" />

                <!--  Confirm password  -->
                <PasswordBox
                    x:Name="GameSignupPage_ConfirmPasswordBox"
                    Margin="5"
                    Header="Confirm password"
                    KeyDown="PasswordBox_KeyDown"
                    TextChanged="ConfirmPasswordBox_TextChanged" />

                <!--  I agree  -->
                <CheckBox
                    x:Name="GameSignupPage_ConfirmCheckBox"
                    Margin="5"
                    Checked="ConfirmCheckBox_Checked"
                    Content="Yes, I agree to the conditions of participation."
                    FontSize="14"
                    Unchecked="ConfirmCheckBox_Unchecked" />               

                <!--  Signup button  -->
                <Button
                    x:Name="GameSignupPage_SignupButton"
                    Height="50"
                    Margin="30,15,30,5"
                    HorizontalAlignment="Stretch"
                    Click="SignupButton_Click"
                    Content="Signup"
                    IsEnabled="False"
                    Tag="ActionButton" />

                <!--  Login Button  -->
                <Button
                    x:Name="GameSignupPage_LoginButton"
                    Height="40"
                    Margin="5,0,5,5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="LoginButton_Click"
                    Content="Already have an account?"
                    FontSize="15"
                    Foreground="White"
                    Tag="ActionButton" />                

                <!--  Error text  -->
                <TextBlock
                    x:Name="ProgressBarMessageBlock"
                    Margin="5"
                    FontWeight="SemiBold"
                    Foreground="Crimson"
                    Visibility="Collapsed" />

                <!--  Progress bar  -->
                <ProgressBar
                    x:Name="ProgressBar"
                    Height="5"
                    Foreground="{StaticResource ProgressBarForegroundColor}"
                    IsIndeterminate="True"
                    ShowError="False"
                    ShowPaused="True" />

            </StackPanel>

        </Border>

        <!--  Take to previous page  -->
        <Button
            x:Name="GoBackButton"
            Width="45"
            Height="45"
            Margin="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="GoBackButton_Click"
            CornerRadius="100"
            Style="{StaticResource DefaultButton}">
            <SymbolIcon Symbol="Back" />
        </Button>

    </Grid>

</Page>
