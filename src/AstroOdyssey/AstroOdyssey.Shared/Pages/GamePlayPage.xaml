<Page
    x:Class="AstroOdyssey.GamePlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AstroOdyssey"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="using:System"
    Background="Black"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">

        <!--  This redenders player, enemies, meteors, healths, and projectiles  -->
        <GameEnvironment x:Name="GameView" Background="Black" />

        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Vertical">

            <!--<TextBlock
                Name="TimeText"
                Margin="5,5,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />-->

            <!--  This shows current score, level and game time  -->
            <StackPanel
                Name="ScoreBarPanel"
                Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Visibility="Collapsed">

                <TextBlock
                    Name="ScoreBarText"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

                <ProgressBar
                    Name="ScoreBar"
                    Width="200"
                    Height="10"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Maximum="100"
                    Minimum="0"
                    Value="100" />

                <TextBlock
                    Name="ScoreBarCount"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

            </StackPanel>

            <!--  This shows the health bar of boss  -->
            <StackPanel
                Name="BossHealthBarPanel"
                Margin="5"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Visibility="Collapsed">

                <TextBlock
                    Name="BossHealthBarText"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="BOSS"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

                <ProgressBar
                    Name="BossHealthBar"
                    Width="200"
                    Height="10"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="Red"
                    Maximum="100"
                    Minimum="0"
                    Value="100" />

                <TextBlock
                    Name="BossHealthBarCount"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{x:Bind Path=BossHealthBar.Value.ToString('0'), Mode=OneWay}"
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

            </StackPanel>

            <!--  This shows fps  -->
            <TextBlock
                Name="FPSText"
                Margin="5"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

            <!--  This shows current objects count in game canvas  -->
            <TextBlock
                Name="ObjectsCountText"
                Margin="5"
                FontWeight="Bold"
                Foreground="White"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

        </StackPanel>

        <!--  This shows moving left and right indicators  -->
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Bottom">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Border
                x:Name="MoveLeftFeed"
                Grid.Column="0"
                Width="15"
                Height="15"
                Margin="10"
                HorizontalAlignment="Left"
                Background="Red"
                BorderBrush="DarkRed"
                BorderThickness="3"
                CornerRadius="50"
                Visibility="Collapsed" />

            <Border
                x:Name="MoveRightFeed"
                Grid.Column="1"
                Width="15"
                Height="15"
                Margin="10"
                HorizontalAlignment="Right"
                Background="Red"
                BorderBrush="DarkRed"
                BorderThickness="3"
                CornerRadius="50"
                Visibility="Collapsed" />

        </Grid>

        <!--  This shows the player health bar  -->
        <StackPanel
            Name="PlayerHealthBarPanel"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal"
            Visibility="Collapsed">

            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Text="HEALTH"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

            <ProgressBar
                Name="PlayerHealthBar"
                Width="200"
                Height="10"
                Margin="5"
                VerticalAlignment="Center"
                Foreground="Red"
                Maximum="100"
                Minimum="0"
                Value="100" />

            <TextBlock
                Name="PlayerHealthBarCount"
                Margin="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Text="{x:Bind Path=PlayerHealthBar.Value.ToString('0'), Mode=OneWay}"
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

        </StackPanel>

        <!--  This shows in game texts  -->
        <TextBlock
            x:Name="InGameText"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="40"
            FontWeight="Bold"
            Foreground="White"
            TextAlignment="Center"
            TextWrapping="WrapWholeWords" />

        <!--  This is for capturing input  -->
        <Border
            x:Name="InputView"
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="Transparent"
            KeyDown="InputView_KeyDown"
            KeyUp="InputView_KeyUp"
            PointerPressed="InputView_PointerPressed"
            PointerReleased="InputView_PointerReleased" />

    </Grid>
</Page>
