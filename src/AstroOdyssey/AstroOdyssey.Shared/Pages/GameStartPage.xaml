<Page
    x:Class="AstroOdyssey.GameStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AstroOdyssey"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    IsTabStop="False"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Images/gameIntro.gif" Stretch="UniformToFill" />
        </Grid.Background>

        <!--  Pre-load-images  -->
        <Grid
            x:Name="AssetsPreloadGrid"
            Width="1"
            Height="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <!--  Language selection buttons  -->
        <StackPanel
            Margin="0,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                x:Name="GameStartPage_EnglishButton"
                x:Uid="GameStartPage_EnglishButton"
                Margin="2"
                Background="Transparent"
                Click="LanguageButton_Click"
                Content="English"
                CornerRadius="50"
                IsFocusEngagementEnabled="False"
                IsTabStop="False"
                Tag="en" />
            <Button
                x:Name="GameStartPage_FrenchButton"
                x:Uid="GameStartPage_FrenchButton"
                Margin="2"
                Background="Transparent"
                Click="LanguageButton_Click"
                Content="French"
                CornerRadius="50"
                IsFocusEngagementEnabled="False"
                IsTabStop="False"
                Tag="fr" />
            <Button
                x:Name="GameStartPage_DeutschButton"
                x:Uid="GameStartPage_DeutschButton"
                Margin="2"
                Background="Transparent"
                Click="LanguageButton_Click"
                Content="Deutsch"
                CornerRadius="50"
                IsFocusEngagementEnabled="False"
                IsTabStop="False"
                Tag="de" />
            <Button
                x:Name="GameStartPage_BanglaButton"
                x:Uid="GameStartPage_BanglaButton"
                Margin="2"
                Background="Transparent"
                Click="LanguageButton_Click"
                Content="Bangla"
                CornerRadius="50"
                IsFocusEngagementEnabled="False"
                IsTabStop="False"
                Tag="bn" />
        </StackPanel>

        <!--  UI controls  -->
        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="10">
            <StackPanel
                MaxWidth="315"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">

                <Image
                    Width="100"
                    Height="100"
                    Source="ms-appx:///Assets/Images/player_ship1.png" />

                <!--  Logo  -->
                <Image Width="300" Source="ms-appx:///Assets/SplashScreen.png" />

                <!--  Tag line  -->
                <TextBlock
                    x:Name="GameStartPage_Tagline"
                    x:Uid="GameStartPage_Tagline"
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="A classic rock metal ⚡ space shooter on WebAssembly."
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

                <!--  Start game button  -->
                <Button
                    x:Name="GameStartPage_PlayButton"
                    x:Uid="GameStartPage_PlayButton"
                    Height="40"
                    Margin="0,50,0,30"
                    HorizontalAlignment="Stretch"
                    Background="Red"
                    BorderBrush="DarkRed"
                    BorderThickness="3"
                    Click="PlayButton_Click"
                    Content="START GAME"
                    CornerRadius="50"
                    FontWeight="SemiBold"
                    Foreground="White"
                    IsFocusEngagementEnabled="False"
                    IsTabStop="False" />

                <!--  Developer page  -->
                <HyperlinkButton
                    x:Name="GameStartPage_DeveloperProfileButton"
                    x:Uid="GameStartPage_DeveloperProfileButton"
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Content="Made with ❤️ by Asadullah Rifat"
                    FontSize="17"
                    Foreground="White"
                    IsFocusEngagementEnabled="False"
                    IsTabStop="False"
                    NavigateUri="https://www.linkedin.com/in/asadullah-rifat/" />

            </StackPanel>
            <Border.Background>
                <SolidColorBrush Opacity="0.7" Color="Black" />
            </Border.Background>
        </Border>

        <!--  Asset credits  -->
        <HyperlinkButton
            x:Name="GameStartPage_AssetsCreditButton"
            x:Uid="GameStartPage_AssetsCreditButton"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Assets by redfoc.com 😘"
            FontSize="20"
            Foreground="White"
            IsFocusEngagementEnabled="False"
            IsTabStop="False"
            NavigateUri="http://www.redfoc.com" />
    </Grid>

</Page>
