<Page
    x:Class="AstroOdyssey.GameStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AstroOdyssey"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    IsTabStop="False"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Images/gameIntro.gif" Stretch="UniformToFill" />
        </Grid.Background>

        <!--  Pre-load-images  -->
        <Grid
            Width="1"
            Height="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Image Source="ms-appx:///Assets/Images/black-hole1.png" />
            <Image Source="ms-appx:///Assets/Images/enemy_1.png" />
            <Image Source="ms-appx:///Assets/Images/enemy_2.png" />
            <Image Source="ms-appx:///Assets/Images/enemy_3.png" />
            <Image Source="ms-appx:///Assets/Images/enemy_4.png" />
            <Image Source="ms-appx:///Assets/Images/enemy_5.png" />
            <Image Source="ms-appx:///Assets/Images/enemy_6.png" />
            <Image Source="ms-appx:///Assets/Images/gameOver.jpg" />
            <Image Source="ms-appx:///Assets/Images/gas_star1.png" />
            <Image Source="ms-appx:///Assets/Images/gas_star2.png" />
            <Image Source="ms-appx:///Assets/Images/gas_star3.png" />
            <Image Source="ms-appx:///Assets/Images/gas_star4.png" />
            <Image Source="ms-appx:///Assets/Images/nebula1.png" />
            <Image Source="ms-appx:///Assets/Images/nebula2.png" />
            <Image Source="ms-appx:///Assets/Images/player_ship1.png" />
            <Image Source="ms-appx:///Assets/Images/player_ship2.png" />
            <Image Source="ms-appx:///Assets/Images/player_ship3.png" />
            <Image Source="ms-appx:///Assets/Images/powerup1.png" />
            <Image Source="ms-appx:///Assets/Images/powerup2.png" />
            <Image Source="ms-appx:///Assets/Images/rock1.png" />
            <Image Source="ms-appx:///Assets/Images/rock2.png" />
            <Image Source="ms-appx:///Assets/Images/rock3.png" />
            <Image Source="ms-appx:///Assets/Images/rock4.png" />
            <Image Source="ms-appx:///Assets/Images/rock5.png" />
            <Image Source="ms-appx:///Assets/Images/rock6.png" />
            <Image Source="ms-appx:///Assets/Images/rock7.png" />
            <Image Source="ms-appx:///Assets/Images/rock8.png" />
            <Image Source="ms-appx:///Assets/Images/rock9.png" />
            <Image Source="ms-appx:///Assets/Images/space_thrust.png" />
            <Image Source="ms-appx:///Assets/Images/star_large.png" />
            <Image Source="ms-appx:///Assets/Images/star_large2.png" />
            <Image Source="ms-appx:///Assets/Images/star_medium.png" />
            <Image Source="ms-appx:///Assets/Images/star_medium2.png" />
            <Image Source="ms-appx:///Assets/Images/star_small.png" />
            <Image Source="ms-appx:///Assets/Images/star_small2.png" />
            <Image Source="ms-appx:///Assets/Images/star_tiny.png" />
            <Image Source="ms-appx:///Assets/Images/star_tiny2.png" />
            <Image Source="ms-appx:///Assets/Images/black-hole2.png" />
            <Image Source="ms-appx:///Assets/Images/galaxy.png" />
            <Image Source="ms-appx:///Assets/Images/planet1.png" />
            <Image Source="ms-appx:///Assets/Images/planet2.png" />
            <Image Source="ms-appx:///Assets/Images/planet3.png" />
            <Image Source="ms-appx:///Assets/Images/planet4.png" />
            <Image Source="ms-appx:///Assets/Images/planet5.png" />
            <Image Source="ms-appx:///Assets/Images/planet6.png" />
            <Image Source="ms-appx:///Assets/Images/planet7.png" />
            <Image Source="ms-appx:///Assets/Images/planet8.png" />
            <Image Source="ms-appx:///Assets/Images/planet9.png" />
        </Grid>

        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="10">
            <StackPanel
                MaxWidth="315"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">

                <Image
                    Width="100"
                    Height="100"
                    Source="ms-appx:///Assets/Images/player_ship1.png" />

                <!--  Logo  -->
                <Image Width="300" Source="ms-appx:///Assets/SplashScreen.png" />

                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="A classic rock metal ⚡ space shooter on WebAssembly."
                    TextAlignment="Center"
                    TextWrapping="WrapWholeWords" />

                <!--  Arcade mode button  -->
                <Button
                    x:Name="PlayButton"
                    Height="40"
                    Margin="0,50,0,50"
                    HorizontalAlignment="Stretch"
                    Background="Red"
                    BorderBrush="DarkRed"
                    BorderThickness="3"
                    Click="PlayButton_Click"
                    Content="START GAME"
                    CornerRadius="50"
                    FontWeight="SemiBold"
                    Foreground="White"
                    IsFocusEngagementEnabled="False"
                    IsTabStop="False" />

                <HyperlinkButton
                    Margin="0,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Content="Made with ❤️ by Asadullah Rifat"
                    FontSize="20"
                    Foreground="White"
                    NavigateUri="https://www.linkedin.com/in/asadullah-rifat/" />

            </StackPanel>
            <Border.Background>
                <SolidColorBrush Opacity="0.7" Color="Black" />
            </Border.Background>
        </Border>

        <HyperlinkButton
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Content="Assets by redfoc.com 😘"
            FontSize="20"
            Foreground="White"
            NavigateUri="http://www.redfoc.com" />

    </Grid>

</Page>
