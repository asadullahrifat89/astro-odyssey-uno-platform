<Page
    x:Class="AstroOdyssey.GameStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AstroOdyssey"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    IsTabStop="False"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/2180138.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <StackPanel
            MaxWidth="315"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <Image
                Width="115"
                Height="115"
                Source="ms-appx:///Assets/Images/player_ship1.png" />

            <Image Width="300" Source="ms-appx:///Assets/SplashScreen.png" />

            <!--  Game title  -->
            <!--<TextBlock
                Margin="10,10,10,40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="35"
                FontWeight="Bold"
                Text="ASTRO ODYSSEY" />-->

            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Text="A classic space shooter game remade for the web on WebAssembly."
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="16"
                Text="Press left or right arrow keys on your keyboard or touch left or right edges of your screen to move ship."
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />


            <!--  Arcade mode button  -->
            <Button
                x:Name="PlayButton"
                Height="40"
                Margin="0,50,0,50"
                HorizontalAlignment="Stretch"
                Background="Red"
                BorderBrush="DarkRed"
                BorderThickness="3"
                Click="PlayButton_Click"
                Content="START GAME"
                CornerRadius="50"
                FontWeight="SemiBold"
                Foreground="White"
                IsFocusEngagementEnabled="False"
                IsTabStop="False" />

            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Text="Made with ❤️ by Asadullah Rifat."
                TextAlignment="Center"
                TextWrapping="WrapWholeWords" />

        </StackPanel>

    </Grid>

</Page>
